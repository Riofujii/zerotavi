<h1>Create new micropost</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@micropost, url: admin_microposts_path) do |f| %>
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title %>
      
      <%= f.label :description, "詳細" %>
      <%= f.text_area :description %>
      
      <%= f.label :category, "カテゴリー" %>
      <%= f.select :category, ['Internships', 'Workshops'] %>
      
      <%= f.label :start_date, "開始" %>
      <%= f.date_field :start_date %>
      
      <%= f.label :end_date, "終了" %>
      <%= f.date_field :end_date %>
      
      <%= f.label :place, "場所" %>
      <%= f.select :place, ['アメリカ', '中国', 'ドイツ', 'フランス', 'ギリシャ', 'カナダ', 'フィリピン'] %>
      
      <%= f.label :price, "金額（円）" %>
      <%= f.text_field :price %>
      
      <%= f.label :link, "リンク" %>
      <%= f.url_field :link %>
      
      <%= f.submit 'Create', class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>