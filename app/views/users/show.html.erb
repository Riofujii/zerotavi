<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image? %>
          <%= image_tag @user.image.url, class: "image" %>
        <% else %>
          <%= gravatar_for @user %>
        <% end %>
        <%= @user.name %>
        <%= @user.email %>
        <p><%= link_to "編集", edit_user_path %></p>
      </h1>
    </section>
  </aside>
  
  <div class="col-md-8">
    <section class="favorite">
      <h3>お気に入り</h3>
      <% @favorite_microposts.each do |post| %>
        <P><%= post.title %></P>

      <% end %>
    </section>
  </div>
</div>